{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignore": ["public", "node_modules", "lgtmoon-wasm/pkg", ".next"]
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"suspicious": {
				"noReactSpecificProps": "off"
			},
			"style": {
				"noImplicitBoolean": "off"
			},
			"correctness": {
				"noUndeclaredDependencies": "off",
				"noUndeclaredVariables": "off"
			},
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	},
	"overrides": [
		{
			"include": [
				"next.config.ts",
				"postcss.config.mjs",
				"tailwind.config.ts",
				"layout.tsx",
				"page.tsx",
				"loading.tsx",
				"error.tsx",
				"not-found.tsx"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off",
						"useNamingConvention": "off"
					}
				}
			}
		},
		{
			"include": ["web-app/src/config/env.ts", "web-app/src/db/schema.ts"],
			"linter": {
				"rules": {
					"style": {
						"useNamingConvention": "off"
					}
				}
			}
		},
		{
			"include": ["web-app/e2e/**/*.ts"],
			"linter": {
				"rules": {
					"correctness": {
						"noNodejsModules": "off"
					}
				}
			}
		}
	]
}
