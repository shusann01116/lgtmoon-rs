{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"includes": [
			"**",
			"!public",
			"!node_modules",
			"!lgtmoon-wasm/pkg",
			"!.next"
		]
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noReactSpecificProps": "off",
				"noUnknownAtRules": "off"
			},
			"style": {
				"noImplicitBoolean": "off"
			},
			"correctness": {
				"noUndeclaredDependencies": "off",
				"noUndeclaredVariables": "off"
			},
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	},
	"overrides": [
		{
			"includes": [
				"next.config.ts",
				"postcss.config.mjs",
				"tailwind.config.ts",
				"layout.tsx",
				"page.tsx",
				"loading.tsx",
				"error.tsx",
				"not-found.tsx"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off",
						"useNamingConvention": "off"
					}
				}
			}
		},
		{
			"includes": [
				"web-app/src/config/*env.ts",
				"web-app/src/schema/*",
				"web-app/src/actions/*",
				"web-app/src/lib/axios.ts"
			],
			"linter": {
				"rules": {
					"style": {
						"useNamingConvention": "off"
					}
				}
			}
		},
		{
			"includes": ["web-app/e2e/**/*.ts"],
			"linter": {
				"rules": {
					"correctness": {
						"noNodejsModules": "off"
					}
				}
			}
		}
	]
}
